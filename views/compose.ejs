<%- include ('./partials/header.ejs'); -%>

<h1>Compose</h1>
<form action="/compose" method="post">
  <div class="form-group">
    <label for="inputText">Title</label>
    <input
      class="form-control"
      type="text"
      name="inputText"
      autocomplete="off"
      id=""
    />

    <label for="postText">Post</label>
    <textarea
      class="form-control"
      name="postText"
      id=""
      cols="30"
      rows="10"
    ></textarea>
  </div>

  <button class="btn btn-info mt-2" type="submit" name="publish" value="storePost">
    Publish
  </button>
</form>

<%- include ('./partials/footer.ejs'); -%>
